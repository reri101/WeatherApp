<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomSwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:textColor">@color/white</item>
        <item name="android:thumbTint">@color/blue</item>
        <item name="android:trackTint">@color/green</item>
    </style>

    <style name="Widget.Theme.WeatherApp.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="MyCustomTabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="RoundedCornerImageButton">
        <item name="shapeAppearanceOverlay">@style/RoundedCorners</item>
    </style>

    <style name="RoundedCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item> <!-- Możesz dostosować tę wartość według swoich preferencji -->
    </style>

</resources>